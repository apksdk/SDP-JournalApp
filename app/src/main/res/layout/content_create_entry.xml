<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.group35.journalapp.CreateEntryActivity"
    tools:showIn="@layout/app_bar_create_entry">

    <ScrollView
        android:id="@+id/createEntrySV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/createEntryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addMediaIV"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/icon" />

            <TextView
                android:id="@+id/addMediaTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to add a media"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/entryTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry name" />

            <EditText
                android:id="@+id/entryTitleET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="Enter your entry name"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/entryNotesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional comments" />

            <EditText
                android:id="@+id/entryNotesET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="Enter your comments here..."
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/entryObligationsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Obligations" />

            <EditText
                android:id="@+id/entryObligationsET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="Enter your obligations here..."
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/entryDecisionsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decisions" />

            <EditText
                android:id="@+id/entryDecisionsET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="Enter your decisions here..."
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/entryOutcomesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outcomes" />

            <EditText
                android:id="@+id/entryOutcomesET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="Enter your outcome here..."
                android:inputType="textMultiLine" />

            <LinearLayout
                android:id="@+id/createEntryButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelEntryBTN"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:theme="@style/ButtonColor" />

                <Button
                    android:id="@+id/entryConfirmBTN"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Confirm"
                    android:theme="@style/ButtonColor" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
