<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group35.journalapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".ViewJournalsActivity"
            android:label="@string/title_activity_view_journals"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateJournalActivity"
            android:label="@string/title_activity_create_journal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewEntriesActivity"
            android:label="@string/title_activity_view_entries"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name=".ViewSingleEntryActivity"
            android:label="@string/title_activity_view_entry"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateEntryActivity"
            android:label="@string/title_activity_create_entry"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EntryHistoryActivity"
            android:label="@string/title_activity_entry_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditSingleEntryActivity"
            android:label="@string/title_edit_single_entry"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>